<% provide :title, @title %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= gravatar_for @user %>
      <h1><%= @user.name %></h1>
    </section>
    <section class="stats">
      <%= render "shared/stats" %>
    </section>
    <section>
      <% if @users.any? %>
        <div class="user-avatars">
          <% @users.each do |user| %>
            <%= link_to gravatar_for(user, 31), user %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users follow">
        <%= render @users %>
      </ul>
      <%= will_paginate %>
    <% end %>
  </div>
</div>
