<% provide :title, @user.name %>
<div class="row">
  <aside class="col-md-3">
    <section class="user_info">
      <%= gravatar_for @user, 80 %>
      <div style="margin-top: 20px"><h1><%= @user.name %></h1></div>
    </section>
    <section class="stats-user">
      <%= render "shared/stats" %>
    </section>
    <section>
      <%= render "follow_form" if user_signed_in? %>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.posts.any? %>
    <h3><%= t ".posts" %> (<%= @user.posts.size %>)</h3>
    <ol class="posts" id="posts">
      <%= render @posts %>
    </ol>
    <%= will_paginate @posts %>
    <% end %>
  </div>
</div>
