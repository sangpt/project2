  <div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">

      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Edit post</h4>
        </div>
        <div class="modal-body">
          <% @post ||= post %>
          <li class="post">
            <%= link_to gravatar_for(@post.user, 50), @post.user %>
            <span class="user"><%= link_to @post.user.name, @post.user %></span>

            <%= form_for @post, data: {id: @post.id} do |f| %>
              <%= render "shared/error_messages", object: f.object %>

              <div class="form-group">
                <%= f.text_field :title, placeholder: t(".placeholder_title"), class: "txt-post form-control" %>
              </div>
              <div class="form-group">
                <%= f.text_area :content, placeholder: t(".placeholder_content"), class: "txt-post form-control" %>
              </div>
              <%= f.submit t(".post"), class: "btn btn-primary", id: "update-post" %>
            <% end %>
          </li>

        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>

    </div>
  </div>
